package com.informatorio.demo.controller;

import org.springframework.stereotype.Component;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RestController;

@Controller		//con @Controller se debe devolver una html... @RestController permite devolver cadenas como en este ejemplo
public class Controlador{
	
	@GetMapping("/")
	public String Inicio() {
		return "Hola clase";
	}
	
	@GetMapping("/inicio5")
	public String Inicio5() {
		return "Inicio 5";
	}
	
	@GetMapping("/iniciotemplate")
	public String Inicio3() {
		return "iniciotemplate.html";
	}
	
	@PostMapping("/")
	public String Inicio2() {
		return "Hola clase por post";
	}
	
	
}
